<% provide(:title, @user.name) %>
<h1><%= @user.name %>,<%= @user.email %></h1>
<div>
  <table class="table table-bordered table-sm user-table">
    <tr>
      <td>
        <%= link_to "◁",user_path(date: @first_day.prev_month),class: "btn btn-info" %>
        【<%= l(@first_day, format: :middle) %>】時間管理表
        <%= link_to "▷",user_path(date: @first_day.next_month),class: "btn btn-info" %>
        </td>
      <td>指定勤務時間:<%= format_basic_info(@user.work_time) %></td>
      <td>基本時間:<%= format_basic_info(@user.basic_time) %></td>
      <td>初日:<%= l(@first_day, format: :short) %></td>
    </tr>
    <tr>
      <td>所属:<%= @user.department.present? ? @user.department : "未所属" %></td>
      <td>氏名:<%= @user.name %></td>
      <td>コード</td>
      <td>#</td>
      <td>出勤日数</td>
      <td>締め:<%= l(@last_day, format: :short) %></td>
    </tr>
  </table>
</div>

<div>
  <table class="table table-bordered table-sm table-hover" id="table-attendances">
    <thead>
      
      <tr>
        <th rowspan="2">日付</th>
        <th rowspan="2">曜日</th>
        
        <th colspan="3">出社</th>
        <th colspan="3">退社</th>
        <th rowspan="2">在社時間</th>
        <th rowspan="2">備考</th>
      </tr>
      <tr>
        <th>時</th>
        <th>分</th>
        <th></th>
        <th>時</th>
        <th>分</th>
        <th></th>
      </tr>
    </thead>
    
    <tbody>
      <% @attendances.each do |day| %>
      <tr>
        <td><%= l(day.worked_on,format: :short) %></td>
        <td><%= $days_of_the_week[day.worked_on.wday] %></td>
        <td><%= l(day.started_at, format: :time)if day.started_at.present? %></td>
          <td></td>
        <td> <% if (Date.current == day.worked_on) && day.started_at.nil? %>
              <%= link_to "出勤", user_attendance_path(@user, day), method: :patch, class: "btn btn-primary" %>
              <% elsif (Date.current == day.worked_on) && day.started_at.present? %>
              <%= link_to "退勤", user_attendance_path(@user, day), method: :patch, class: "btn btn-primary" %>
        
          <% end %>
        </td>
        <td><%= l(day.finished_at, format: :time)if day.finished_at.present? %></td>
        <td></td>
        <td></td>
        <td></td>
        <td></td>
      </tr>
      <% end %>
    </tbody>
  </table>
</div>